<div {{bind-attr class=messageClass}} >
  {{!-- <span class="avatar-small">{{we-avatar userId=fromId.id}}</span> --}}
  <span class="avatar-small cursor-pointer" {{action 'openProfile' fromId}}>{{user-avatar user=fromId}}</span>
  <span class="message">{{html content.content}}</span>
  <div class="message-footer">
    <span class="createdAt">
      {{{format-date createdAt}}}
    </span>
  </div>
</div>